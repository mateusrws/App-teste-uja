{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es2020",
    "lib": ["es2020"],
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "moduleDetection": "force",
    "types": ["node", "jest"]
  },
  "include": ["src/**/*", "src/knex.ts"],
  "exclude": ["node_modules"]
}
