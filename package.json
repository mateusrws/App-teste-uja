    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "http-status-codes": "^2.3.0",
    "uuid": "^13.0.0",
    "vitest": "^4.0.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/css": "^0.13.0",
    "@eslint/js": "^9.38.0",
    "@eslint/json": "^0.13.2",
    "@eslint/markdown": "^7.4.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.0",
    "@types/node": "24.9.0",
    "eslint": "^9.38.0",
    "globals": "^16.4.0",
    "jiti": "^2.6.1",
    "nodemon": "^3.1.4",
    "prisma": "^6.17.1",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.46.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
